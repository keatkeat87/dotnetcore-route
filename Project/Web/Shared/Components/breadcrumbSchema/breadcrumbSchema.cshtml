@model Project.Web.ViewComponents.BreadcrumbSchemaViewModel

<script type="application/ld+json">
    {
    "@@context": "http://schema.org",
    "@@type": "BreadcrumbList",
    "itemListElement": [
    {
    "@@type": "ListItem",
    "position": 1,
    "item": {
    "@@id": "@ViewBag.Domain@LanguageService.AddLanguageToUrl("/")",
    "name": "@Localizer["Home"]"
    }
    },
    {
    "@@type": "ListItem",
    "position": 2,
    "item": {
    "@@id": "@Model.secondPath",
    "name": "@Localizer[@Model.secondPathName]"
    }
    }
    @if (Model.thirdPath != null)
    {
        <text>
    ,{
    "@@type": "ListItem",
    "position": 3,
    "item": {
    "@@id": "@Model.thirdPath",
    "name": "@Model.thirdPathName"
    }
    }
        </text>
    }
    ]
    }
</script>


